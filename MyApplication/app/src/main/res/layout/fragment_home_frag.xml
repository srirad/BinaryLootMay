<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.programmer.myapplication.home_frag">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homeimg_img"
        android:padding="0dp"
        android:src="@drawable/homebg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:scaleType="fitXY"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot deal this week:"
        android:id="@+id/home_title1"
        android:layout_below="@+id/homeimg_img"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:textStyle="bold|italic"
        android:paddingTop="10dp"
        android:textColor="#222" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starbucks, Christmas in a Cup"
        android:id="@+id/home_title2"
        android:layout_below="@+id/home_title1"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label"
        android:textSize="16sp"
        android:textStyle="italic"
        android:paddingLeft="10dp"
        android:textColor="#222" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50% off second cup Cafe Latte"
        android:id="@+id/home_title3"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label"
        android:layout_below="@+id/home_title2"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#555"
        android:paddingLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/home_title2"
        android:layout_alignEnd="@+id/home_title2"
        android:layout_alignTop="@+id/home_title3"
        android:layout_toRightOf="@+id/home_title3"
        android:layout_toEndOf="@+id/home_title3" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView3"
        android:src="@drawable/wishlist_active"
        android:paddingRight="10dp"
        android:layout_below="@+id/homeimg_img"
        android:layout_alignRight="@+id/homeimg_img"
        android:layout_alignEnd="@+id/homeimg_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="378"
        android:id="@+id/home_num"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/home_title3"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="redeemed"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dip" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:src="@drawable/gold"
        android:paddingLeft="10dp"
        android:layout_below="@+id/home_title3"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label"
        android:layout_marginTop="5dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:id="@+id/homegold"
        android:textSize="25sp"
        android:layout_below="@+id/home_title3"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="5dip"
        android:textColor="#ff000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView34"
        android:src="@drawable/counting_dot"
        android:layout_alignTop="@+id/homegold"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginRight="10dip" />

</RelativeLayout>
