<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.programmer.myapplication.details4"
    android:id="@+id/details4">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView23"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/fbicon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView24"
        android:layout_alignTop="@+id/imageView23"
        android:layout_toRightOf="@+id/imageView23"
        android:layout_toEndOf="@+id/imageView23"
        android:src="@drawable/twitticon"
        android:layout_marginLeft="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView25"
        android:layout_alignTop="@+id/imageView24"
        android:layout_toRightOf="@+id/imageView24"
        android:layout_toEndOf="@+id/imageView24"
        android:src="@drawable/gplus"
        android:layout_marginLeft="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView26"
        android:layout_alignTop="@+id/imageView25"
        android:layout_toRightOf="@+id/imageView25"
        android:layout_toEndOf="@+id/imageView25"
        android:src="@drawable/blogicon"
        android:layout_marginLeft="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView27"
        android:layout_alignTop="@+id/imageView26"
        android:layout_toRightOf="@+id/imageView26"
        android:layout_toEndOf="@+id/imageView26"
        android:src="@drawable/icon1"
        android:layout_marginLeft="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView28"
        android:layout_alignTop="@+id/imageView27"
        android:layout_toRightOf="@+id/imageView27"
        android:layout_toEndOf="@+id/imageView27"
        android:src="@drawable/icon2"
        android:layout_marginLeft="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and conditions"
        android:id="@+id/textView26"
        android:layout_below="@+id/imageView23"
        android:layout_alignLeft="@+id/imageView23"
        android:layout_alignStart="@+id/imageView23"
        android:textColor="#fb000000"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry&apos;s standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged."
        android:id="@+id/terms"
        android:layout_below="@+id/textView26"
        android:layout_alignLeft="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="378"
        android:id="@+id/textView28"
        android:textSize="40sp"
        android:textColor="#ff000000"
        android:layout_below="@+id/terms"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginTop="10dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="redeemed"
        android:id="@+id/textView29"
        android:textSize="25sp"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView28"
        android:layout_alignLeft="@+id/terms"
        android:layout_alignStart="@+id/terms"
        android:layout_marginTop="-10dip"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem it !"
        android:id="@+id/button3"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:background="@drawable/button1"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to wishlist"
        android:id="@+id/button4"
        android:background="@drawable/button2"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Top"
        android:id="@+id/textView30"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:textSize="15sp"
        android:textColor="#ff000000"
        android:layout_marginBottom="10dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Promo ends on 31st Dec 2014"
        android:id="@+id/textView31"
        android:textStyle="italic"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView29"
        android:layout_toLeftOf="@+id/imageView28"
        android:layout_toStartOf="@+id/imageView28"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="-5dip" />

</RelativeLayout>
