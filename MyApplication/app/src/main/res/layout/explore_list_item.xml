<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="180dip"
        android:layout_height="150dip"
        android:id="@+id/imageView31"
        android:layout_alignTop="@+id/imageView30"
        android:layout_toRightOf="@+id/imageView30"
        android:layout_toEndOf="@+id/imageView30"
        android:src="@drawable/loot2"
        android:layout_marginRight="5dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old Chang Kee"
        android:id="@+id/textView32"
        android:layout_below="@+id/imageView31"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy 2 Curry Puff for only $2.90"
        android:id="@+id/textView33"
        android:layout_below="@+id/textView32"
        android:layout_alignLeft="@+id/textView32"
        android:layout_alignStart="@+id/textView32"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView32"
        android:src="@drawable/gold"
        android:layout_below="@+id/textView33"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33"
        android:layout_marginTop="5dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:id="@+id/textView34"
        android:textSize="20sp"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/imageView32"
        android:layout_toRightOf="@+id/imageView32"
        android:layout_toEndOf="@+id/imageView32"
        android:layout_marginLeft="5dip" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView33"
        android:layout_alignTop="@+id/textView32"
        android:layout_toRightOf="@+id/textView33"
        android:layout_toEndOf="@+id/textView33"
        android:src="@drawable/wishlist_active"
        android:layout_marginRight="5dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="392"
        android:id="@+id/textView24"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/imageView32"
        android:layout_alignRight="@+id/textView33"
        android:layout_alignEnd="@+id/textView33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="redeemed"
        android:id="@+id/textView25"
        android:phoneNumber="false"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/textView34"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24"
        android:layout_marginRight="5dip" />

</RelativeLayout>
